.search {
  --searchInputWidth: 51rem;
  position: relative;
  display: inline-flex;

  &__input {
    padding: 10px 10px; 
    width: var(--searchInputWidth);
    border: 1px solid #ccc;
    border-radius: var(--baseBorderRadius);

    &:focus {
      outline: 1px solid var(--colorCrayola);
    }
  }

  &__icon {
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-40%);
    font-size: 16px; 
    color: #999;
    opacity: 1;
    cursor: text;
  }
}
